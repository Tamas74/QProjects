@model QSurvey.Models.KoosJrKneeModel

@{
    ViewBag.Title = "KoosJrKneeSurvey";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Koos Knee Survey</title>
</head>
<style>
    .container
    {
        color:#1f497d;
    }
    .h3
    {
       margin-bottom: 10px;
    }
    p
    {
        font-size: medium;
    }
    ul, li
    {
        display: inline-block;
        list-style-type: none;
    }
    .btnSubmit
    {
        display:block;
        height:40px;
        width:150px;
        background-color:#1f497d;
        color:white;
        text-align:center;
        margin:0 auto;
        border:none;
        border-radius:40px;
        cursor:pointer;
    }
</style>
<body>
  @using (Html.BeginForm("PostSurvey", "KoosJrKnee", FormMethod.Post))
  { @Html.HiddenFor(m => m.RequestID)

        <div class="container">
            <h1>
                <center>
                   KOOS JR KNEE SURVEY
                </center>
            </h1>
            <table style="margin-left: 20px;">
                <tr>
                    <td>
                        <h3 class="h3">
                            INSTRUCTIONS</h3>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style="margin-bottom: 20px;">
                          This survey asks for your view about your knee. This information will help us keep track of how you feel about your knee and how
                           well you are able to do your usual activities. Answer every question by ticking the appropriate box, only one box for each question. 
                           If you are unsure about how to answer a question, please give the best answer you can. 
                        </p>
                    </td>
                </tr>
                 <tr>
                    <td>
                        <h3 class="h3">
                            Stiffness</h3>
                    </td>
                </tr>
               <tr>
                    <td>
                        <p style="margin-bottom: 20px;">
                          The following question concerns the amount of joint stiffness you have experienced during the last week in your knee. Stiffness is a 
                          sensation of restriction or slowness in the ease with which you move your knee joint.
                        </p>
                    </td>
                </tr>
                 <tr>
                    <td>
                        <p >
                           1. How severe is your knee stiffness after first wakening in the morning? 
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <ul>
                            <p>
                                @Html.RadioButtonFor(m => m.S1, "none") None 
                                @Html.RadioButtonFor(m => m.S1, "mild") Mild 
                                @Html.RadioButtonFor(m => m.S1, "moderate") Moderate 
                                @Html.RadioButtonFor(m => m.S1, "severe") Severe 
                                @Html.RadioButtonFor(m => m.S1, "extreme") Extreme
                            </p>
                        </ul>
                    </td>
                </tr>
                 <tr>
                    <td>
                        <h3 class="h3">Pain</h3>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style="margin-bottom: 20px;">
                            What amount of knee pain have you experienced the last week during the following activities? 
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                       <p>
                            2. Twisting/pivoting on your knee </p>
                    </td>
                </tr>
                 <tr>
                    <td>
                        <ul>
                            <p>
                                @Html.RadioButtonFor(m => m.P1, "none") None 
                                @Html.RadioButtonFor(m => m.P1, "mild") Mild 
                                @Html.RadioButtonFor(m => m.P1, "moderate") Moderate 
                                @Html.RadioButtonFor(m => m.P1, "severe") Severe 
                                @Html.RadioButtonFor(m => m.P1, "extreme") Extreme
                            </p>
                        </ul>
                    </td>
                </tr>

                <tr>
                    <td>
                       <p>
                            3. Straightening knee fully </p>
                    </td>
                </tr>
                 <tr>
                    <td>
                        <ul>
                            <p>
                                @Html.RadioButtonFor(m => m.P2, "none") None 
                                @Html.RadioButtonFor(m => m.P2, "mild") Mild 
                                @Html.RadioButtonFor(m => m.P2, "moderate") Moderate 
                                @Html.RadioButtonFor(m => m.P2, "severe") Severe 
                                @Html.RadioButtonFor(m => m.P2, "extreme") Extreme
                            </p>
                        </ul>
                    </td>
                </tr>

                 <tr>
                    <td>
                       <p>
                            4. Going up or down stairs </p>
                    </td>
                </tr>
                 <tr>
                    <td>
                        <ul>
                            <p>
                                @Html.RadioButtonFor(m => m.P3, "none") None 
                                @Html.RadioButtonFor(m => m.P3, "mild") Mild 
                                @Html.RadioButtonFor(m => m.P3, "moderate") Moderate 
                                @Html.RadioButtonFor(m => m.P3, "severe") Severe 
                                @Html.RadioButtonFor(m => m.P3, "extreme") Extreme
                            </p>
                        </ul>
                    </td>
                </tr>
                <tr>
                    <td>
                       <p>
                            5.Standing upright </p>
                    </td>
                </tr>
                 <tr>
                    <td>
                        <ul>
                            <p>
                                @Html.RadioButtonFor(m => m.P4, "none") None 
                                @Html.RadioButtonFor(m => m.P4, "mild") Mild 
                                @Html.RadioButtonFor(m => m.P4, "moderate") Moderate 
                                @Html.RadioButtonFor(m => m.P4, "severe") Severe 
                                @Html.RadioButtonFor(m => m.P4, "extreme") Extreme
                            </p>
                        </ul>
                    </td>
                </tr>

                <tr>
                    <td>
                        <h3 class="h3">Function, daily living</h3>
                          
                    </td>
                </tr>

                 <tr>
                    <td>
                        <p style="margin-bottom: 20px;">
                           The following questions concern your physical function. By this we mean your ability to move around and to look after yourself. For 
                           each of the following activities please indicate the degree of difficulty you have experienced in the last week due to your knee.

                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                       <p>Rising from sitting  </p>
                          
                    </td>
                </tr>

                
                 <tr>
                    <td>
                        <ul>
                            <p>
                                @Html.RadioButtonFor(m => m.F1, "none") None 
                                @Html.RadioButtonFor(m => m.F1, "mild") Mild 
                                @Html.RadioButtonFor(m => m.F1, "moderate") Moderate 
                                @Html.RadioButtonFor(m => m.F1, "severe") Severe 
                                @Html.RadioButtonFor(m => m.F1, "extreme") Extreme
                            </p>
                        </ul>
                    </td>
                </tr>

                <tr>
                    <td>
                       <p>Bending to floor/pick up an object</p>
                          
                    </td>
                </tr>

                
                 <tr>
                    <td>
                        <ul>
                            <p>
                                @Html.RadioButtonFor(m => m.F1, "none") None 
                                @Html.RadioButtonFor(m => m.F1, "mild") Mild 
                                @Html.RadioButtonFor(m => m.F1, "moderate") Moderate 
                                @Html.RadioButtonFor(m => m.F1, "severe") Severe 
                                @Html.RadioButtonFor(m => m.F1, "extreme") Extreme
                            </p>
                        </ul>
                    </td>
                </tr>
       </table>
            @if (ViewBag.ReadOnly == null || (ViewBag.ReadOnly != null && ViewBag.ReadOnly == false))
            { 
                <input class="btnSubmit" type="submit" value="Submit Survey"/>
            }
        </div>
  }
</body> 
</html> 