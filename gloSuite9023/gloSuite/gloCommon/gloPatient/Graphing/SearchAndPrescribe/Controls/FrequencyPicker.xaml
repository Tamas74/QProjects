<UserControl x:Class="Microsoft.Cui.SamplePages.FrequencyPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:controls="clr-namespace:Microsoft.Cui.Controls;assembly=Microsoft.Cui.WPFControls"
    >
    <Grid x:Name="LayoutRoot" Margin="0,0,15,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="every" Margin="4,0,5,0"
                   IsHitTestVisible="False" VerticalAlignment="Center"/>

        <controls:WatermarkedTextBox x:Name="FrequencyTextBox" MinWidth="40" MaxLength="2" Margin="0,0,5,0" Grid.Column="1" Text="" />

        <TextBlock Text="hours" Grid.Column="2" VerticalAlignment="Center"
                   IsHitTestVisible="False" Margin="0,0,4,0"
                   />

    </Grid>
</UserControl>
